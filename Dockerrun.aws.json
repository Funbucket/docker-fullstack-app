{
  "AWSEBDockerrunVersion": 2,
	"containerDefinitions": [
        {
            "name": "frontend",
            "image": "ouchcs/docker-frontend",
            "hostname": "frontend",
            "essential": "false",
            "memory": 128
        },
        {
            "name": "backend",
            "image": "ouchcs/docker-backend",
            "hostname": "backend",
            "essential": false,
            "memory": 128			
        },
        {
            "name": "nginx",
            "image": "ouchcs/docker-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["frontend", "backend"],
            "memory": 128
        }
	]
}
